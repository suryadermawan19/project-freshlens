#include <WiFi.h>
#include <HTTPClient.h>
#include <ArduinoJson.h>
#include <Wire.h>
#include "Adafruit_SHT31.h"

// --- 1. KONFIGURASI ---
const char* ssid = "Wifikossritanjung";
const char* password = "wifikos123";

// [DIUBAH] Setiap perangkat HARUS memiliki ID unik yang berbeda!
const char* deviceId = "FRSHLNS-0001"; 

// [DIUBAH] URL Cloud Function yang akan menerima data.
// Dapatkan dari Firebase Console setelah Anda deploy fungsi ingestSensorData.
const char* cloudFunctionUrl = "https://asia-southeast2-freshlens-1caf5.cloudfunctions.net/ingestSensorData";

// Inisialisasi sensor SHT31
Adafruit_SHT31 sht31 = Adafruit_SHT31();

void setup() {
  Serial.begin(115200);
  delay(1000);

  Wire.begin(22, 23); // SDA=22, SCL=23

  if (!sht31.begin(0x44)) {
    Serial.println("Tidak dapat menemukan sensor SHT31, periksa koneksi!");
    while (1) delay(1);
  }

  // Koneksi ke WiFi
  Serial.print("Menghubungkan ke ");
  Serial.println(ssid);
  WiFi.begin(ssid, password);
  while (WiFi.status() != WL_CONNECTED) {
    delay(500);
    Serial.print(".");
  }
  Serial.println("\nWiFi terhubung!");
  Serial.print("Alamat IP: ");
  Serial.println(WiFi.localIP());
}

void loop() {
  float temperature = sht31.readTemperature();
  float humidity = sht31.readHumidity();

  if (isnan(temperature) || isnan(humidity)) {
    Serial.println("Gagal membaca data dari sensor SHT31!");
  } else {
    Serial.print("Suhu: "); Serial.print(temperature); Serial.println(" *C");
    Serial.print("Kelembapan: "); Serial.print(humidity); Serial.println(" %");

    // Kirim data ke Cloud Function
    sendDataToCloudFunction(temperature, humidity);
  }

  // Tunggu 3 menit sebelum mengirim data lagi
  delay(180000); 
}

// [DIUBAH] Fungsi ini sekarang mengirim data ke Cloud Function, bukan langsung ke Firestore
void sendDataToCloudFunction(float temp, float humid) {
  if (WiFi.status() == WL_CONNECTED) {
    HTTPClient http;
    http.begin(cloudFunctionUrl);
    http.addHeader("Content-Type", "application/json");

    // Buat JSON payload yang lebih sederhana
    JsonDocument doc;
    doc["deviceId"] = deviceId;
    doc["temperature"] = temp;
    doc["humidity"] = humid;

    String requestBody;
    serializeJson(doc, requestBody);

    Serial.println("Mengirim data ke Cloud Function...");
    Serial.println(requestBody);

    // Kirim permintaan HTTP POST
    int httpResponseCode = http.POST(requestBody);

    if (httpResponseCode > 0) {
      String response = http.getString();
      Serial.print("Kode Respons HTTP: ");
      Serial.println(httpResponseCode);
      Serial.print("Respon dari server: ");
      Serial.println(response);
    } else {
      Serial.print("Error saat mengirim data, kode: ");
      Serial.println(httpResponseCode);
    }

    http.end();
  } else {
    Serial.println("Koneksi WiFi terputus.");
  }
}
